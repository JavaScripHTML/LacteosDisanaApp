<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#FFFFFF"
        android:elevation="4dp"
        android:layout_margin="8dp"
        android:dividerPadding="8dp">

        <!-- Razón Social -->
        <TextView
            android:id="@+id/razonSocialTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Razón Social: AGROSERVISA CONSULTORES SAC"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_marginBottom="4dp" />

        <!-- RUC -->
        <TextView
            android:id="@+id/rucTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RUC: 20529357096"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_marginBottom="16dp" />

        <!-- Detalles del Ticket -->
        <TextView
            android:id="@+id/ticketTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detalles del Ticket"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#1A237E"
            android:layout_marginBottom="8dp" />

        <!-- Información del ticket -->
        <TextView
            android:id="@+id/detallesTicketTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Producto: Leche Entera\nCantidad: 2\nPrecio Unitario: S/ 5.00\nTotal: S/ 10.00"
            android:textSize="16sp"
            android:textColor="#757575"
            android:layout_marginBottom="16dp" />

        <!-- Línea divisoria -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginBottom="16dp" />

        <!-- Total -->
        <TextView
            android:id="@+id/totalTicketTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TOTAL: S/ 10.00"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#4CAF50"
            android:gravity="end"
            android:layout_marginBottom="16dp" />

        <!-- Botón Generar PDF -->
        <Button
            android:id="@+id/generarPDFButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Generar PDF del Ticket"
            android:backgroundTint="#1976D2"
            android:textColor="@android:color/white"
            android:padding="12dp"
            android:elevation="4dp" />

    </LinearLayout>
</ScrollView>
